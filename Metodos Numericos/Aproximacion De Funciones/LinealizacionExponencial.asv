function [A, B] = LinealizacionExponencial(x, y)
    
    % Funci√≥n que calcula los coeficientes (A) y (B)
    % de un ajuste exponencial
    % 
    % y = A*exp(B*x)
    % ln(y) = ln(A) + B*x
    % 
    % ln(y) = C, ln(A) = D
    % 
    % C = B*x + D
    
    [n, ~] = size(x);
    
    M = [ones(n, 1) x];
    C = log(y);
    
    % Sistema de ecuaciones lineales de la forma
    % M*E = C
    
    [E] = M\C;

    D = E(1);
    B = E(2);
    
    A = exp(D);
    
end

